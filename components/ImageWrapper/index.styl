.root
  width 22u
  height 22u
  padding 0.5u
  border 1px solid $borderColor
  border-radius: 22u
  +tablet()
    width 32u
    height 32u
  +wide()
    width 38u
    height 38u
  &.icon
    width 18u
    height 18u
    +tablet()
      width 24u
      height 24u

.content
  display flex
  align-items center
  justify-content center
  width 100%
  height 100%
  border 1px solid $borderColor
  border-radius 22u