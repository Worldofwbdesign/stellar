.root
  max-width: 1200px
  padding 6u 3u
  text-align left
  +tablet()
    padding 8u 6u
  +wide()
    margin 0 auto

.sections
  +desktop()
    flex-direction row
    justify-content space-between
    align-items flex-start

.section
  +desktop()
    width 48%

.title
  font-size 20px
  color $white
  font-weight 300
  +tablet()
    font(xxl)
  +wide()
    font-size 30px

.description
  color $white
  margin-top 3u
  line-height 3u
  font-weight 300
  opacity .65
  +wide()
    font-size 16px

.buttonWrapp
  margin-top 4u
  align-items center
  +tablet()
    align-items flex-start
  +wide()
    margin-top 8u

.contacts
  margin-top 6u
  +desktop()
    margin-top 0

.contactsList
  +desktop()
    margin-top 1u

.social
  margin-top 6u
  flex-direction row

.copyright
  margin-top 6u
  font-size 11px
  color $white
  line-height 3u
  opacity .65
  +desktop()
    text-align center


  