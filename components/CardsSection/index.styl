.cards
  flex 1
  flex-basis auto
  width 100%
  margin-top 4u
  border-radius 1u
  overflow hidden
  +tablet()
    flex-flow row nowrap

.sectionDescrWrapp
  margin-top 4u

.description
  text-align justify
  line-height 3u
  color $textColor
  margin-top 4u
  font-weight 300
  +desktop()
    column-gap 4u
    columns auto 2
  +wide()
    font-size 18px
    line-height 4u

.buttonWrapp
  width 100%
  flex 1
  flex-direction row
  justify-content center
  flex-basis auto
  margin-top 4u
  +wide()
    margin-top 6u